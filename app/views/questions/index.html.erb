<div class ="contents">
  <% @questions.each do |question| %>
  <div class="content_post">
    <div class="question">
    <%= simple_format(question.text) %>
    </div>
    <button id="<%= question.id %>" class="answer_button">
      答え
    </button>
  </div>

  <div id="ans_<%= question.id %>" class="content_answer js-close"></div>
    
  <% end %>
  
</div>